@model IEnumerable<Lab35_Aksana.Patrubeika_Practice.Models.User>
@{
    ViewBag.Title = "List of Users";
}

<a asp-action="Create">Add User</a>

<table class="table">
    <tr><th>Name</th><th>Email</th><th>Role</th><th></th></tr>
    @foreach (var user in Model)
    {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Id</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Change</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
    }
</table>

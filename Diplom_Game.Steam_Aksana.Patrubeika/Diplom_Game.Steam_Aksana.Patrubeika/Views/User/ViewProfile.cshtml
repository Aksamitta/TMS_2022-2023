@model Diplom_Game.Steam_Aksana.Patrubeika.ViewModel.ProfileViewModel
@{ 
    ViewBag.Title = "Profile";
}
<h2>@ViewBag.Title</h2>
<hr />

<div class="card" style="width: 50rem;">
    <img src="@Model.Img" class="rounded mx-auto d-block" alt="@Model.SteamName">
    <div class="card-body">
        <h5 class="card-title">@Model.SteamName</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
        <li class="list-group-item"><strong>Level:</strong> @Model.UserLevel</li>
        <li class="list-group-item"><strong>Country:</strong> @Model.Country</li>
    </ul>
    <div class="card-body">   
        <a class="btn btn-link" asp-controller="User" asp-action="EditProfile" >Edit Profile</a>|
        <a class="btn btn-link" asp-controller="Games" asp-action="Index" >Back to Games</a>

    </div>
</div>


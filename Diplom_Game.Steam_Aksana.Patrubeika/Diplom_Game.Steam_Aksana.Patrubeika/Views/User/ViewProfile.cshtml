@model Diplom_Game.Steam_Aksana.Patrubeika.ViewModel.ProfileViewModel
@{ 
    ViewBag.Title = "Profile";
}
<h2>@ViewBag.Title</h2>
<hr />

<div class="panel-group">
    <div class="panel panel-info">
        <div class="panel-heading">My Profile</div>
        <div class="panel-body">
            @using (Html.BeginForm("", "", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                    <div class="form-group">
                    @Html.LabelFor(item => item.Email, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                        @Html.TextBoxFor(item => item.Email, new { @class = "form-control", @placeholder = "Customer Name", disabled = "true" })
                        </div>
                    </div>
                    <div class="form-group">
                    @Html.LabelFor(item => item.SteamName, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                        @Html.TextBoxFor(item => item.SteamName, new { @class = "form-control", @placeholder = "Confirmation Number", disabled = "true" })
                        </div>
                    </div>
                    <div class="form-group">
                    @Html.LabelFor(item => item.UserLevel, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                        @Html.TextBoxFor(item => item.UserLevel, new { @class = "form-control", @placeholder = "Level", disabled = "true" })
                        </div>
                    </div>
                    <div class="form-group">
                    @Html.LabelFor(item => item.Country, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                        @Html.TextBoxFor(item => item.Country, new { @class = "form-control", @placeholder = "Delivery Date", disabled = "true" })
                        </div>
                    </div>
            }
        </div>
    </div>
</div>
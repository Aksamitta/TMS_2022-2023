@model List<Auto> 
@{
    ViewData["Title"] = "All Autos"; 
}

<table class="table"> 
    <tr>
        <th>#</th>
        <th>Auto Model</th>
        <th>Year of Purchase</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
                  <tr> 
                          <td>
                @Html.DisplayFor(modelItem => item.AutoId)
                          </td>
                      <td>
                @Html.DisplayFor(modelItem => item.AutoModel)
                      </td>
                       <td>
                @Html.DisplayFor(modelItem => item.Year)
                       </td>
                       <td>
                @Html.DisplayFor(modelItem => item.Price)
                       </td>
                       <td>
                            <a type="button" class="btn btn-danger" asp-controller="Home" asp-action="DeleteCar" asp-route-Id="@item.AutoId">Delete</a>
                            <a type="button" class="btn btn-info" asp-controller="Home" asp-action="InfoCars" asp-route-Id="@item.AutoId">Info</a>
                       </td>
                       
                      
                  </tr>
    } 
 </table>
